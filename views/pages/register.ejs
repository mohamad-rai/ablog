<div class="container pb-5 mr-3 w-25">
    <div class="row">
        <div class="col-md-12">
            <h2>ثبت نام</h2>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-id-card "></i>
                    </span>
                </div>
                <input type="text" class="form-control" id="first_name" placeholder="نام">
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-id-card "></i>
                    </span>
                </div>
                <input type="text" class="form-control" id="last_name" placeholder="نام خانوادگی">
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-male"></i>
                        <i class="fa fa-female"></i>
                    </span>
                </div>
                <select id="gender" class="form-control">
                    <option value="0">جنسیت...</option>
                    <option value="male">مرد</option>
                    <option value="female">زن</option>
                </select>
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-envelope"></i>
                    </span>
                </div>
                <input type="text" class="form-control text-align-left" id="email" placeholder="ایمیل">
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-mobile-alt"></i>
                    </span>
                </div>
                <input type="text" class="form-control text-align-left" id="mobile" placeholder="موبایل">
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-user"></i>
                    </span>
                </div>
                <input type="text" class="form-control text-align-left" id="username" placeholder="نام کاربری">
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-user-lock"></i>
                    </span>
                </div>
                <input type="password" class="form-control text-align-left" id="password" placeholder="کلمه عبور">
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-user-lock"></i>
                    </span>
                </div>
                <input type="password" class="form-control text-align-left" id="confirmPassword"
                       placeholder="تکرار کلمه عبور">
            </div>
        </div>
        <div class="col-md-12 d-flex mt-3">
            <a class="btn btn-custom" id="signup">ثبت نام</a>
            <a href="/login" class="btn btn-light">ورود</a>
        </div>
    </div>
</div>