<div class="w-50 ml-auto mr-auto mb-5 mt-5 p-3 bg-light">
    <div class="row">
        <div class="col-12 pb-3">
            <h3><%= data.article.title %></h3>
        </div>
        <div class="col-12">
            <img src="/assets/articles/<%= data.article.image %>" alt="<%= data.article.image %>" class="w-100 rounded">
        </div>
        <div class="col-12">
            <img src="/assets/avatars/<%= data.article.author.avatar %>" alt="<%= data.article.author.avatar %>"
                 class="mt-3 mb-3 rounded-circle mini-img">
            <span class="text-muted">
                نویسنده:
                <%= data.article.author.first_name + " " + data.article.author.last_name %>
            </span>
        </div>
        <div class="col-12 mb-3 border-bottom d-flex justify-content-between">
            <span class="text-muted">
                تاریخ انتشار:
                <%= data.article.created_at %>
            </span>
            <span class="text-muted">
                <%= data.article.favs %>
                پسندیدن
                                ❤️
            </span>
        </div>
        <div class="col-12">
            <%- data.article.content %>
        </div>
        <div class="col-12 border-top pt-5 mt-5">
            <h5>نظرات:</h5>
            <% if(typeof sessionUser !== "undefined" && sessionUser !== null){ %>
                <div class="froala-editor"></div>
                <button class="btn btn-primary mt-3 mb-3" id="sendComment" data-id="<%= data.article._id %>">ارسال نظر
                </button>
            <% } %>
            <div class="d-block">
                <%for(const comment of data.comments){%>
                    <div class="row bg-light-purple pt-3 mb-2 border-bottom comment">
                        <div class="col-md-12 d-flex align-items-center mb-3 comment-writer">
                            <img src="/assets/avatars/<%= comment.writer.avatar %>" alt="<% comment.writer.username %>"
                                 class="rounded-circle">
                            <div class="d-flex flex-column">
                                <span><%=comment.writer.first_name + " " + comment.writer.last_name%></span>
                                <span class="text-muted"><%=comment.created_at%></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <%-comment.content%>
                        </div>
                    </div>
                <%}%>
            </div>
        </div>
    </div>
</div>